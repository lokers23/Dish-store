@model DishStore.Models.Dish

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить эту запись?</h3>
<div>
    <hr />
    <div class="card mb-3" style="width: 1000px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img class="card-img-top" style="" src="@Url.Content(Model.ImagePath)" alt="Картинки нет">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title fw-bold">@Html.DisplayFor(model => model.Name, new{@class="card-title"})</h5>
                    <p class="card-text">Производитель: @Html.DisplayFor(model => model.Manufacturer.Name)</p>
                    <p class="card-text">Страна: @Html.DisplayFor(model => model.Manufacturer.Country)</p>
                    <p class="card-text">Категория: @Html.DisplayFor(model => model.Category.Name)</p>
                    <p class="card-text">Цена: @Html.DisplayFor(model => model.Cost)</p>
                    <p class="card-text">Материал: @Html.DisplayFor(model => model.Material)</p>
                </div>
            </div>
        </div>
    </div>
</div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Вернуться к редактированию</a>
    </form>

