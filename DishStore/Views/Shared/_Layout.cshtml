<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DishStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DishStore.styles.css" asp-append-version="true" />
</head>
<body style="background-color:#fffff0; font-family:Verdana, Geneva, Tahoma, sans-serif;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="card-img-top" style="height: 3rem;float:right;" src="@Url.Content("/img/logostore.png")" alt="Картинки нет">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Магазин посуды</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dish" asp-action="GetAll">Каталог</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dish" asp-action="Index">Редактирование</a>
                        </li>
                        }
                        
                        
                    </ul>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link active btn btn-dark m-1" asp-controller="Account" asp-action="Register">Регистрация</a>
                        <a class="nav-link active btn btn-dark" asp-controller="Account" asp-action="Login">Вход</a>
                    }
                    else
                    {
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <input class="btn btn-danger rounded" type="submit" value="Выход" />
                        </form>
                    }

                    <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">
                        <img class="card-img-top" style="height: 2rem;float:right;" src="@Url.Content("/img/cart.png")" alt="Картинки нет">
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_NotificationPartial" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
