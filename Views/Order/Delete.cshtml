@model DishStore.Models.Order

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить эту запись?</h3>
<div>
    <hr />
    <div class="card mb-3" style="width: 1000px;">
        <div class="row no-gutters">
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title fw-bold">@Html.DisplayFor(model => model.Name, new{@class="card-title"})</h5>
                    <p class="card-text">Логин: @Html.DisplayFor(model => model.User.Login)</p>
                    <p class="card-text">Адрес: @Html.DisplayFor(model => model.Address)</p>
                    <p class="card-text">Способ оплаты: @Html.DisplayFor(model => model.PaymentMethod)</p>
                    <p class="card-text">Почта: @Html.DisplayFor(model => model.Email)</p>
                    <p class="card-text">Номер телефона: @Html.DisplayFor(model => model.PhoneNumber)</p>
                    <p class="card-text">Дата заказа: @Html.DisplayFor(model => model.DateOrder)</p>
                    <p class="card-text">Список товаров в заказе:</p>
                    <ul>
                        @foreach (var dish in Model.DishOrders)
                        {
                            <li>@dish.Dish?.Name</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
    
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Удалить" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Вернуться к редактированию</a>
</form>
