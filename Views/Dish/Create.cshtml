@model DishStore.Models.Dish

@{
    ViewData["Title"] = "Добавление записи";
}

<h1>Добавление новых данных о посуды</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label">Имя</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Material" class="control-label">Материал</label>
                <input asp-for="Material" class="form-control" />
                <span asp-validation-for="Material" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Cost" class="control-label">Цена</label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label>Изображение</label>
                <input name="Image" class="form-control" accept="image/jpeg,image/jpg,image/png" type="file"/>
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CategoryId" class="control-label">Категория</label>
                 @Html.DropDownListFor(m => m.CategoryId, ViewBag.categories as SelectList, new{@class="form-select"})
            </div>
            <div class="form-group mb-2">
                <label asp-for="Manufacturer" class="control-label">Производитель</label>
                @Html.DropDownListFor(m => m.ManufacturerId, ViewBag.manufacturers as SelectList, new{@class="form-select"})
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Вернуться к редактированию</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
